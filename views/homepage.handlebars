{{#each projects as |project| }}
<div class="row mb-4 project">
  <div class="col-md-5">

    <h2>
    <span for="img" aria-label="gear">⚙️{{{get_emoji}}}</span> 
    <a href="/project/{{project.id}}">{{project.name}}</a>
    </h2>
    <p>
        <span for="img" aria-label="money">💲</span>
        <span class="dollar-amount">{{project.needed_funding}}</span> needed!
    </p>
    <p>Created by {{user.name}} on {{project.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>{{project.description}}</p>
  </div>
</div>
{{/each}}